{
  "version": 2,
  "public": true,
  "builds": [],
  "routes": [
    { "src": "/(.*)", "dest": "/index.html", "methods": ["GET", "HEAD"] },
    { "handle": "filesystem" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "no-referrer" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
} 